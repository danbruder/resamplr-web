@require 'colors.styl'

html,
body
    height 100%
    width 100%
    margin 0
    padding 0
    left 0
    top 0
    font-size 100%

*
    font-family 'Lato', Helvetica, sans-serif
    color headerColor
    line-height 1.5

h1,h2,h3,h4,h5,h6 
    font-family 'Montserrat', sans-serif;
    font-weight 400

h1
    font-size 2.5rem

h2
    font-size 1.65rem

h3
    font-size 1.375rem

h4
    font-size 1.125rem

h5
    font-size 1rem

h6
    font-size 0.875rem

p
    font-size 1.125rem
    font-weight 400
    line-height 1.8

.font-light
    font-weight 300

.font-regular
    font-weight 400

.font-heavy
    font-weight 700